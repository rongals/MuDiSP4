sp {crai*propose*copy-input
   (state <s> ^name crai 
              ^io.input-link.fresh yes)
-->
   (<s> ^operator <op> + =)
   (<op> ^name copy-input)
}

sp {apply*copy-input
   (state <s> ^operator <op>
              ^io.input-link <il>)
   (<il> ^usrmap <um>
         ^carmap <cm>
         ^allmap <am>
         ^channels <chs>)
   (<op> ^name copy-input)
-->
   (<s>  ^usrmap <um>
         ^carmap <cm>
         ^allmap <am>
         ^channels <chs>)
   (<il> ^fresh yes -)
}
